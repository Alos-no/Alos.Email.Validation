<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <PackageId>Alos.Email.Validation</PackageId>
    <Version>1.3.0</Version>
    <Description>Email validation library for anti-abuse protection. Includes provider-specific normalization (Gmail, Outlook, etc.), relay service blocking, disposable domain detection, and MX record verification.</Description>
    <PackageTags>email;validation;spam;anti-abuse;disposable;relay;mx;dns</PackageTags>
  </PropertyGroup>

  <!-- Include README.md in the NuGet package -->
  <ItemGroup>
    <None Include="README.md" Pack="true" PackagePath="\" />
  </ItemGroup>

  <!-- Package References -->
  <ItemGroup>
    <PackageReference Include="DnsClient" Version="1.8.0" />
    <PackageReference Include="Microsoft.Extensions.Configuration.Abstractions" Version="8.0.0" />
    <PackageReference Include="Microsoft.Extensions.Configuration.Binder" Version="8.0.0" />
    <PackageReference Include="Microsoft.Extensions.DependencyInjection.Abstractions" Version="8.0.0" />
    <PackageReference Include="Microsoft.Extensions.Hosting.Abstractions" Version="8.0.0" />
    <PackageReference Include="Microsoft.Extensions.Http" Version="8.0.0" />
    <PackageReference Include="Microsoft.Extensions.Logging.Abstractions" Version="8.0.0" />
    <PackageReference Include="Microsoft.Extensions.Options" Version="8.0.0" />
  </ItemGroup>

  <!-- Embedded Resources: Blocklist files -->
  <ItemGroup>
    <EmbeddedResource Include="Resources\disposable_email_blocklist.conf" />
    <EmbeddedResource Include="Resources\disposable_email_allowlist.conf" />
  </ItemGroup>

  <!--
    Allow the test project to access internal members for testing purposes.
    The public key is derived from the Alos.Email.Validation.snk file.
    To regenerate: sn -tp Alos.Email.Validation.pub
  -->
  <ItemGroup>
    <InternalsVisibleTo Include="Alos.Email.Validation.Tests, " />
  </ItemGroup>

</Project>
